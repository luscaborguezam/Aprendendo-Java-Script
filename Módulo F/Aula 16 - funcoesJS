//precisa ser chamada
//necessita de entrada(parâmetros)
//Funções sempre retorna algo
//
// são ações executas que são chamadas em decorrencia de algum evento

function parimpar(n=0){
    var num = n
    if(num%2==0){
        return 'par'
    } else {
        return 'impar'
    }

}
var number = 156465
console.log(parimpar(number))


function fatorial(n){
    let fat = 1
    for(let c = n; c>1; c--){
        fat *=c
    }
}


//RECURSIVIDADE
function fatorial_2(n){
    if(n==1){
        return 1
    } else{
        return n * fatorial_2(n-1)
    }
}
